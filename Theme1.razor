@namespace Oqtane.Theme.Custom
@inherits ThemeBase

<div class="main">
    <div class="top-row px-4">
        <h1>@PageState.Page.Name</h1> <div class="ml-md-auto"><UserProfile /> <Login /> <ControlPanel /></div>
    </div>
    <div class="container">
        <div class="row px-4">
            <div class="col-sm">
                <Pane Name="Content" />
            </div>
        </div>
        <div class="row px-4">
            <Pane Name="Admin" />
        </div>
    </div>
</div>

<div class="sidebar">
    <div align="center"><Logo /></div>
    <Menu />
</div>

@code {
    public override string Panes { get { return "Content"; } }

    protected override async Task OnInitializedAsync()
    {
        await IncludeCSS("Theme1.css");
    }
}